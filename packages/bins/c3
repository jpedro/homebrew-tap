#!/usr/bin/env bash
set -eu

SEP="   "

echo -en "\n$SEP"
for row in {0..35}
do
    for col in {0..5}
    do
        color=$((16 + $row + $col * 36))
        printf "\033[38;05;%s;1m  %3s  " $color $color
    done
    echo -en "\n$SEP"
done
echo -en "\033[0m"

for row in {0..3}
do
    for col in {0..5}
    do
        color=$((232 + $row + $col * 4))
        printf "\033[38;05;%s;1m  %3s  " $color $color
    done
    echo -en "\n$SEP"
done
echo -e "\033[0m"

echo "$SEP -- Foreground colors organized vertically"

